<ContentDialog
    x:Class="Imgur.Uwp.Dialogs.LoginInterceptorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Imgur.Uwp.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    Background="#34343A"
    Opacity="1"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    Windows10version1809:CornerRadius="5"
    FullSizeDesired="False"
    VerticalAlignment="Center"
    >

    <Grid HorizontalAlignment="Stretch" Padding="0" Margin="0,0,0,-1"  VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Grid.ColumnSpan="2" Height="24" Source="ms-appx:///Assets/App/sign_transparent.png" VerticalAlignment="Center" />

            <Button Grid.Column="1" Width="33" BorderThickness="1"  BorderBrush="#585D6A" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Tapped="Close" Padding="0">
                <FontIcon  FontWeight="SemiBold"  VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="#2fbe7c" FontFamily="ms-appx:///Assets/fonts/segmdl2.ttf#Segoe MDL2 Assets"  FontSize="12" Glyph="&#xE8BB;" />
            </Button>
        </Grid>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" Margin="0,20,0,0" Text="{Binding MessageType, Converter={StaticResource LoginInterceptorEnumToStringConverter}}"></TextBlock>
        <TextBlock HorizontalAlignment="Center" Grid.Row="2">Sign in to save it!</TextBlock>
        <Button HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Padding="20,8,20,8" Background="#2fbe7c" Windows10version1809:CornerRadius="6" Margin="0,20,0,0" Grid.Row="3">
            <TextBlock  x:Uid="LoginOrRegister" />
        </Button>
    </Grid>
</ContentDialog>
