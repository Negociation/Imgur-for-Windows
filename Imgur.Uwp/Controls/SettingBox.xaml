<UserControl
    x:Class="Imgur.Uwp.Controls.SettingBox"
    x:Name="SettingBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Imgur.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Blue"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="0,0,0,0" BorderBrush="{Binding BoxBrush,ElementName=SettingBoxControl}" CornerRadius="5" BorderThickness="2" Opacity="0.9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*" />
            <ColumnDefinition Width="0.4*"  />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock  Margin="10,10,0,0" FontSize="14" FontWeight="SemiBold"  MaxLines="2" Text="{Binding Header, ElementName=SettingBoxControl}" TextWrapping="Wrap"  />
        <TextBlock Margin="10,0,0,10" TextWrapping="Wrap" FontSize="12" Grid.Row="2" Foreground="LightGray" Opacity="0.9"  Text="{Binding Text, ElementName=SettingBoxControl}" />
        <ContentPresenter  Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" HorizontalAlignment="Right" Content="{Binding Control,ElementName=SettingBoxControl}"    />
    </Grid>
</UserControl>
