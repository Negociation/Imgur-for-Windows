<UserControl
    x:Class="Imgur.Uwp.Controls.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Imgur.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <Grid HorizontalAlignment="Stretch">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="2,20,0,0">
                <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" FontWeight="Normal" FontSize="18" Margin="0,2,8,0" Glyph="&#xE946;"  HorizontalAlignment="Center" />
                <TextBlock x:Uid="SettingsPageAboutTitle" FontWeight="SemiBold"  FontSize="18" />
            </StackPanel>
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*"  />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition  Height="auto" />
                    <RowDefinition  Height="auto" />
                    <RowDefinition  Height="auto" />
                    <RowDefinition  Height="auto" />
                </Grid.RowDefinitions>
                <Image Height="50" Grid.Column="0" Grid.RowSpan="2"  Margin="0,0,5,0" VerticalAlignment="Top"  Source="ms-appx:///Assets/App/logo_transparent.png" />

                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
                    <TextBlock x:Uid="AppTitle" FontWeight="SemiBold" FontSize="16" Foreground="#01b96b" />
                    <TextBlock FontWeight="SemiBold" FontSize="16" Text=" [beta]" Foreground="#7d54fa" />
                </StackPanel>
                <TextBlock x:Uid="AppDesc" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,0" FontSize="12" TextWrapping="Wrap" />


                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2">
                    <TextBlock x:Uid="AppVersion" Margin="0,0,0,0" FontWeight="SemiBold" FontSize="14" />
                    <TextBlock Margin="5,0,0,0" FontWeight="SemiLight" FontSize="14" Text="{x:Bind Version}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  Grid.Row="3" Grid.Column="1">
                    <TextBlock x:Uid="AppBranch" Margin="0,0,0,0" FontWeight="SemiBold" FontSize="14" />
                    <TextBlock  Margin="5,0,0,0" FontWeight="SemiLight" FontSize="14" Foreground="#7d54fa">Beta 2</TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>

    </Grid>
</UserControl>
