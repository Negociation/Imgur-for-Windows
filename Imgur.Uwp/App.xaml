<Application
    x:Class="Imgur.Uwp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Imgur.Uwp">
    <Application.Resources>
        <ResourceDictionary>

            <FontFamily x:Key="FluentUIGlyphs">ms-appx:///Assets/fonts/fluentui.ttf#Segoe MDL2 Assets</FontFamily>
            <FontFamily x:Key="SegoeMDLGlyphs">ms-appx:///Assets/fonts/segmdl2.ttf#Segoe MDL2 Assets</FontFamily>
            <FontFamily x:Key="ImgurGlyphs">ms-appx:///Assets/fonts/Imgur.ttf#Imgur</FontFamily>


            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Resources/ControlStylesDictionary.xaml"/>
                <ResourceDictionary Source="Resources/ThemeDictionary.xaml"/>
                <ResourceDictionary Source="Resources/ConvertersDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    </Application>
